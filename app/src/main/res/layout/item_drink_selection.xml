<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Drink Name and Price Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/drinkNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Drink Name"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/drinkPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$15"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#FF6B35"
                android:layout_marginStart="12dp" />

        </LinearLayout>

        <!-- Hot / Iced Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#F8F8F8"
            android:padding="8dp"
            android:layout_marginTop="4dp">

            <RadioGroup
                android:id="@+id/drinkTypeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/hotRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hot"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:buttonTint="#FF6B35"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/icedRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iced (+$3)"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:buttonTint="#FF6B35" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
