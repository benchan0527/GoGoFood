<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/welcomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to GoGoFood Restaurant Ordering System"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnSelectRestaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Restaurant"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Menu"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnOrderHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Orders"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnKitchenView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kitchen View"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnTableOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Table Orders"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnTestData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Data"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnAdminLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin Login"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>